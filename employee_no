import java.util.Scanner;
class Demo
{
    int empl_id;
    String name;



    static int count;
}

public class object2 {
    public static void main(String[] args)
    {
        Demo e =new Demo();
        Scanner sc =new Scanner(System.in);
        System.out.println("enter n number of employee");
        Demo.count=sc.nextInt();

         for (int i=0; i<Demo.count;i++)
         {
             System.out.println("enter empid=");
             e.empl_id= sc.nextInt();
             System.out.println("enter emp-name=");
             e.name=sc.next();

             System.out.println("employee id="+e.empl_id);
             System.out.println("employee name="+e.name);



             System.out.println("employee count="+(i+1));


         }
    }

}
